<section>
    <h2 class="slogan"> Sign Up Now... </h2>
    {{!-- User Sign Up --}}
    <div class="signUp-container">
        <form action="/users/signUp" method="POST" class="signup-form">
            {{!-- Prompts user to enter their name --}}
            <label for="name">Username:</label>
            <input type="text" id="name" name="name" required>
            {{!-- Prompts user to enter their email --}}
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
            {{!-- Prompts user to input their password --}}
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
            {{!-- On click, creates an account for the user to the website --}}
            <button id="submit" type="submit">Sign Up</button>
        </form>
        {{!-- returns to the home page if user already has an account after clicking log in --}}
        <div>
            <p class="redirection">Already have an account? <a href="/">Log In</a></p>
        </div>
    </div>
</section>

<script src="./js/signup.js"></script>